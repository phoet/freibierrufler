%html
  %head
    %meta{'http-equiv'=>"content-type", :content=>"text/html; charset=UTF-8"}
    %meta{'http-equiv'=>"content-language", :content=>"de"}
    %meta{'http-equiv'=>"language", :content=>"de"}
    %meta{:name=>"language", :content=>"german, de"}
    %link{:rel=>'stylesheet', :href=>'/css/application.css', :type=>'text/css'}
    %script{:src=>"https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js", :type => "text/javascript"}
    :javascript
      function showStuff() {
        var lis = $('#tweets li');
        lis.filter(':visible').first().hide().attr('title', '');
        var invisibles = lis.filter('[title*="unused"]').filter(':hidden');
        invisibles.first().fadeIn();
        if(invisibles.size() == 0) {
          lis.attr('title', 'unused');
        }
      }
      $(document).ready(function(){
        setInterval('showStuff()', 3000);
      });
    
    %title FREIBIER!

  %body
    %header
      %h1 FREIBIER!
      #tweets
        %ul
          - @tweets.each_with_index do |tweet, index|
            %li{:class => index == 0 ? '' : 'hidden', :title => 'unused'}
              %a{:href => "http://twitter.com/#{tweet.from_user}"}= tweet.text
