!!! utf-8
%html
  %head
    %title FREIBIER!
    
    %meta{charset: "utf-8"}
    %meta{name: "description", content: "Freibier!"}
    %meta{name: "author", content: "Peter SchrÃ¶der"}
    %meta{name: "language", content: "german, de"}
    %meta{'http-equiv' => "refresh", content: "300; URL=/"}
    
    %link{rel: 'stylesheet', href: '/css/application.css', type: 'text/css'}
    %link{rel: 'shortcut icon', href: '/img/freibier_icon.png'}
    
    %script{src: "https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js", type: "text/javascript"}
    %script{src: "/js/application.js?#{Time.now.to_i}", type: "text/javascript"}

  %body
    %header
      %h1 FREIBIER!
      #tweets
        %ul
          - @tweets.each_with_index do |tweet, index|
            %li{class: index == 0 ? '' : 'hidden', title: 'unused', 'data-tweet' => tweet}
              %p.small
                %em.bier
                  %a{href: "http://twitter.com/#{tweet.from_user}"}= "#{tweet.from_user} zwitschert:"
              %br
              %p= tweet.text
